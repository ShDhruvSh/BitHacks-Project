#Screen Manager to switch between different screens
WindowManager:
    CameraWindow:
    ConfirmPhotoWindow:
    EnterInfoWindow:
    InfoWindow:
    ReportWindow:
    EndWindow:


#Background color for widgets
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos


#Background color for labels that are BackgroundLabels
<BackgroundLabel@Label+BackgroundColor>
    background_color: 1, 1, 1, 1

#Background color for buttons that are BackgroundButtons
<BackgroundButton@Button+BackgroundColor>
    background_color: 1, 1, 1, 1

#Background color for text inputs that are BackgroundTextInput
<BackgroundTextInput@TextInput+BackgroundColor>
    background_color: 1, 1, 1, 1

<NumericInput@TextInput>:
    input_filter: 'float'
    multiline: False


#First screen that allows the user to take a picture
<CameraWindow>:
    name: "main"

    FloatLayout:

        Camera:
            id: camera
            #resolution: (2000, 2000)
            play: True
            size_hint: (1.0, 0.8)
            pos_hint: {'x': 0, 'y': 0.2}

        Button:
            text: 'Take Photo'
            size_hint: (1, 0.2)
            pos_hint: {'x': 0, 'y': 0}
            on_press:
                root.onCameraClick()
                app.root.current = "second"
                root.manager.transition.direction = "left"


#Second screen that allows user to check their image and submit for processing
<ConfirmPhotoWindow>:
    name: "second"

    Button:
        text: "Verify Image"
        size_hint: (1, 0.2)
        pos_hint: {'x': 0, 'y': 0.8}
        on_release:
            root.getImage()

    Image:
        id: plate_image
        source: ""
        size_hint: (1, 0.6)
        pos_hint: {'x': 0, 'y': 0.2}

    Button:
        text: "Retake Image"
        size_hint: (0.5, 0.2)
        pos_hint: {'x': 0, 'y': 0}
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"
            root.replaceImage()

    Button:
        id: submit-photo
        text: "Submit Photo"
        size_hint: (0.5, 0.2)
        pos_hint: {'x': 0.5, 'y': 0}
        on_press:
            root.showPopup()


#Third screen that allows user to input information on new cops to the database
<EnterInfoWindow>:
    name: "third"

    FloatLayout:

        BackgroundLabel:
            text: "We currently don't have data for this cop. Please fill out the following info to add this cop to our database."
            background_normal: ''
            background_color: (0, 0, 1, 1)
            size_hint: (0.9, 0.15)
            pos_hint: {'x': 0.05, 'y': 0.84}
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            font_size: 24

        BackgroundLabel:
            text: "Name: "
            background_normal: ''
            background_color: (0, 0, 1, 1)
            size_hint: (0.45, 0.15)
            pos_hint: {'x': 0.05, 'y': 0.68}
            halign: 'right'
            valign: 'middle'
            text_size: self.size
            font_size: 24

        TextInput:
            id: name-label
            text: "Input name here" #this will be replaced with info from user
            multiline: True
            background_normal: ''
            background_color: (0, 0, 1, 1)
            size_hint: (0.45, 0.15)
            pos_hint: {'x': 0.5, 'y': 0.68}
            text_size: self.size
            font_size: 24
            foreground_color: (1, 1, 1, 0.4)
            on_focus:
                root.clearNameText()
            padding_y:
                [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

        BackgroundLabel:
            text: "Badge Number: "
            background_normal: ''
            background_color: (0, 0, 1, 1)
            size_hint: (0.525, 0.15)
            pos_hint: {'x': 0.1, 'y': 0.52}
            halign: 'left'
            valign: 'middle'
            text_size: self.size

        BackgroundLabel:
            background_normal: ''
            background_color: (0, 0, 1, 1)
            size_hint: (0.05, 0.15)
            pos_hint: {'x': 0.05, 'y': 0.52}

        NumericInput:
            #text: str(root.value)
            id: id-label
            #input_filter: int
            text: "Input badge number here" #this will be replaced with info from user
            multiline: True
            background_normal: ''
            background_color: (0, 0, 1, 1)
            size_hint: (0.275, 0.15)
            pos_hint: {'x': 0.675, 'y': 0.52}
            foreground_color: (1, 1, 1, 0.4)
            on_text_validate:
                root.value = float(self.text)
                #root.validate(0, 9)
            on_focus:
                root.clearIdText()
            padding_x:
                [self.width / 2.0 - (self._get_text_width(max(self._lines, key=len), self.tab_width,
                self._label_cached)) / 2.0, 0] if self.text else [self.width / 2.0, 0]
            padding_y:
                [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

        BackgroundLabel:
            text: "Official Infractions: "
            background_normal: ''
            background_color: (0, 0, 1, 1)
            size_hint: (0.525, 0.15)
            pos_hint: {'x': 0.1, 'y': 0.36}
            halign: 'left'
            valign: 'middle'
            text_size: self.size

        BackgroundLabel:
            background_normal: ''
            background_color: (0, 0, 1, 1)
            size_hint: (0.05, 0.15)
            pos_hint: {'x': 0.05, 'y': 0.36}

        BackgroundLabel:
            id: off-infrac-label
            text: "0" #this will be replaced with info from dictionary
            multiline: False
            background_normal: ''
            background_color: (0, 0, 1, 1)
            size_hint: (0.275, 0.15)
            pos_hint: {'x': 0.675, 'y': 0.36}

        BackgroundLabel:
            text: "Reported Infractions: "
            background_normal: ''
            background_color: (0, 0, 1, 1)
            size_hint: (0.525, 0.15)
            pos_hint: {'x': 0.1, 'y': 0.2}
            halign: 'left'
            valign: 'middle'
            text_size: self.size

        BackgroundLabel:
            background_normal: ''
            background_color: (0, 0, 1, 1)
            size_hint: (0.05, 0.15)
            pos_hint: {'x': 0.05, 'y': 0.2}

        BackgroundLabel:
            id: rep-infrac-label
            text: "0" #this will be replaced with info from dictionary
            multiline: False
            background_normal: ''
            background_color: (0, 0, 1, 1)
            size_hint: (0.275, 0.15)
