WindowManager:
    CameraWindow:
    InfoWindow:
    ReportWindow:
    EndWindow:

<CameraWindow>:
    name: "main"

    GridLayout:
        cols:1

        GridLayout:
            cols: 2

            Camera:
                id: camera
                #resolution: (300, 300)
                play: False

            Button:
                text: 'Take Photo'
                on_press: root.onCameraClick()

        Button:
            text: "Submit"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"


<InfoWindow>:
    name: "second"

    GridLayout:
        cols:1

        GridLayout:
            cols: 1
            Button:
                text: "Take Another Photo"
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"

        Button:
            text: "Report Cop"
            on_release:
                app.root.current = "third"
                root.manager.transition.direction = "left"

<ReportWindow>:
    name: "third"

    GridLayout:
        cols: 2
        Button:
            text: "Review Cop Information"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "right"

        Button:
            text: "Submit Report"
            on_release:
                app.root.current = "fourth"
                root.manager.transition.direction = "left"


<EndWindow>:
    name: "fourth"

    GridLayout:
        cols: 1

        GridLayout:
            cols: 2
            Label:
                text: "Thank you for your report!"

        Button:
            text: "Submit another report"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"