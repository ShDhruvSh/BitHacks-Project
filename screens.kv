WindowManager:
    CameraWindow:
    InfoWindow:
    ReportWindow

<CameraWindow>:
    name: "main"

    GridLayout:
        cols:1

        GridLayout:
            cols: 2

            Camera:
                id: camera
                #resolution: (300, 300)
                play: False

            Button:
                text: 'Take Photo'
                on_press: root.onCameraClick()

        Button:
            text: "Submit"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"


<InfoWindow>:
    name: "second"

    GridLayout:
        cols:1

        GridLayout:
            cols: 1
            Button:
                text: "Go Back"
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"

        Button:
            text: "Report Cop"
            on_release:
                app.root.current = "third"
                root.manager.transition.direction = "left"

<ReportWindow>:
    name: "third"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "second"
            root.manager.transition.direction = "right"


<ReportWindow>:
    name: "fourth"

    Label:
        text: "Thank you for your report!"

    Button:
        text: "Submit another report"
        on_release:
            app.root.current = "first"
            root.manager.transition.direction = "right"